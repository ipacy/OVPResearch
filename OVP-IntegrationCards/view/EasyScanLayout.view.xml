<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:control="vistex.poc.ovp.control"
          xmlns:w="sap.ui.integration.widgets" xmlns:core="sap.ui.core"
          xmlns="sap.m" xmlns:f="sap.f" xmlns:ovp="sap.ovp.ui"
          controllerName="vistex.poc.ovp.controller.EasyScanLayout"
          displayBlock="true">
    <Page>
        <customHeader>
            <core:Fragment
                    fragmentName="vistex.poc.ovp.fragments.CustomHeader" type="XML"/>
        </customHeader>
        <content>
            <f:DynamicPage>
                <f:header>
                    <core:Fragment
                            fragmentName="vistex.poc.ovp.fragments.FilterBar" type="XML"/>
                </f:header>
                <f:content>
                    <ovp:EasyScanLayout dragAndDropEnabled="true"
                                        class="vistexEasyScanLayout">

                        <control:IntegrationCard title="{data>/custom1/title}"
                                                 subTitle="{data>/custom1/subTitle}" counter="{data>/custom1/counter}"
                                                 manifest="{data>/custom1/data}" action=".onAction">
                            <control:layoutData>
                                <f:GridContainerItemLayoutData
                                        minRows="4" columns="9"/>
                            </control:layoutData>
                            <List items="{data>/custom1/data}">
                                <StandardListItem title="{data>name}"/>
                            </List>
                        </control:IntegrationCard>
                        <w:Card manifest="{data>/list1}"/>
						<!--<w:Card manifest="{manifests>/standardList}"/>
                        <w:Card manifest="{manifests>/list1}"/>
                        <w:Card manifest="{manifests>/list2}"/>
                        <w:Card manifest="{manifests>/object}" action=".onAction"/>
                        <w:Card manifest="{manifests>/table}" action=".onAction"/>
                        <w:Card manifest="{manifests>/stackedColumn}"/>
                        <w:Card manifest="{manifests>/donut}"/>
                        <w:Card manifest="{manifests>/timeline}" action=".onAction"/>
                        <w:Card manifest="{manifests>/calendar}" action="onAction"/>-->
                    </ovp:EasyScanLayout>
                </f:content>
            </f:DynamicPage>
        </content>
    </Page>
</mvc:View>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:control="vistex.control.ovp"
          xmlns="sap.m" xmlns:f="sap.f"
          controllerName="vistex.poc.ovp.controller.DashboardLayout"
          displayBlock="true">
    <f:DynamicPage id="idDynamicPage" class = "ovpApplication">
        <f:header>
            <!-- <core:Fragment fragmentName="vistex.poc.ovp.fragments.FilterBar"
                type="XML" /> -->
        </f:header>
        <f:content>
            <!--                    <ovp:EasyScanLayout dragAndDropEnabled="true" id="OVPDashboardLayout"-->
            <!--                                        class="vistexEasyScanLayout">-->
            <control:OVPDashboardLayout id="OVPDashboardLayout"
                                        class="ovpLayout">
                <control:cards>
                    <control:IntegrationCard title="{data>/cards/custom1/title}"
                                             layoutConfig="{data>/cards/custom1/layoutConfig}"
                                             subTitle="{data>/cards/custom1/subTitle}"
                                             counter="{data>/cards/custom1/counter}"
                                             manifest="{data>/cards/custom1/data}" action=".onAction">
                        <control:viewSwitch>
                            <Select width="60%"/>
                        </control:viewSwitch>
                        <List items="{data>/cards/custom1/data}">
                            <StandardListItem title="{data>name}"/>
                        </List>
                    </control:IntegrationCard>
                    <control:IntegrationCard title="{data>/cards/custom2/title}"
                                             layoutConfig="{data>/cards/custom2/layoutConfig}"
                                             subTitle="{data>/cards/custom2/subTitle}"
                                             counter="{data>/cards/custom2/counter}"
                                             manifest="{data>/cards/custom2/data}" action=".onAction">
                        <List items="{data>/cards/custom2/data}">
                            <StandardListItem title="{data>name}"/>
                        </List>
                    </control:IntegrationCard>
                    <!--							<w:Card manifest="{data>/cards/objList}" action=".onAction"/>-->
                    <!--							<w:Card manifest="{data>/cards/list1}"/>-->
                    <!--							<w:Card manifest="{data>/cards/table}" action=".onAction"/>-->
                    <!--							<w:Card manifest="{data>/cards/list2}" action=".onAction"/>-->
                    <!--							<w:Card manifest="{data>/cards/donut}" action=".onAction"/>-->
                    <!--							<w:Card manifest="{data>/cards/stackedColumn}" action=".onAction"/>-->
                    <!--							<w:Card manifest="{data>/cards/calendar}" action=".onAction"/>-->

                    <!--                    </ovp:EasyScanLayout>-->
                </control:cards>
            </control:OVPDashboardLayout>
        </f:content>
    </f:DynamicPage>
</mvc:View>
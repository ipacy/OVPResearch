<mvc:View
        controllerName="sap.ovp.app.Main"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.f"
>
    <f:DynamicPage id="ovpMain" class="ovpApplication" preserveHeaderStateOnScroll="false"
                   headerExpanded="{ui>/bHeaderExpanded}">
        <f:content>
            <core:Fragment fragmentName="{ui>/cardContainerFragment}" type="XML"/>
        </f:content>
    </f:DynamicPage>
</mvc:View>

